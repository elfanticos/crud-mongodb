<%- include('./partials/_header') -%>
<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/task/edit/<%= task._id%>" method="POST">
                        <div class="form-group">
                            <input autocomplete="off" type="text" name="title" placeholder="Insert a Title" class="form-control" value="<%= task.title%>">
                        </div>
                        <div class="form-group">
                            <textarea autocomplete="off" type="text" name="description" placeholder="Insert a Description" class="form-control"><%= task.description%></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Edit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/_footer') -%>