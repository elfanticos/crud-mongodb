<%- include('./partials/_header') -%>
<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/task/add" method="POST">
                        <div class="form-group">
                            <input autocomplete="off" type="text" name="title" placeholder="Insert a Title" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea autocomplete="off" type="text" name="description" placeholder="Insert a Description" class="form-control"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- LIST -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    <% let i = 1; %>
                    <% for(let row of tasks) { %>
                        <tr>
                            <td> <%= i %> </td>
                            <td> <%= row.title%> </td>
                            <td> <%= row.description%> </td>
                            <td class="d-flex justify-content-around">
                                <a href="/task/turn/<%= row._id%>"
                                    class="btn <%= row.status ? 'btn-success' : 'btn-dark'%>"
                                >Done</a>
                                <a href="/task/edit/<%= row._id%>" class="btn btn-info">Edit</a>
                                <a href="/task/deleteTask/<%= row._id%>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% i++ %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('./partials/_footer') -%>